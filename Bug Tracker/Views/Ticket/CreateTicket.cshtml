@model Ticket


@{
	ViewBag.Title = "Add Ticket";
}


<form method="post" asp-action="CreateTicket">

	<input asp-for="ProjectID" type="hidden" />

	<div class="form-group">
		<label asp-for="TicketName"></label>
		<input asp-for="TicketName" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="TicketDescription"></label>
		<input asp-for="TicketDescription" class="form-control" />
	</div>


	<div class="form-group">

		<div class="row">


			<div class="col-sm-6">
				<label>Assignee FirstName</label>
				<input name="FirstName" class="form-control" required />
			</div>

			<div class="col-sm-6">
				<label>Assignee LastName</label>
				<input name="LastName" class="form-control" required/>
			</div>
			
		</div>
		
	</div>

	<div class="form-group">
		<label asp-for="DueDate"></label>
		<input asp-for="DueDate" class="form-control" type="datetime" />
	</div>

	@foreach(Priority priority in ViewBag.Priorities)
	{
		<div class="form-check">
			<input class="form-check-input" type="radio" name="chosenPriority" id="chosenPriority_@priority.PriorityID">
			<label class="form-check-label" for="chosenPriority_@priority.PriorityID">
				@priority.PriorityLevel
			</label>
		</div>
	}

	@foreach (IssueType issueType in ViewBag.IssueTypes)
	{
		<div class="form-check">
			<input class="form-check-input" type="radio" name="chosenIssueType" id="chosenIssueType_@issueType.IssueTypeID">
			<label class="form-check-label" for="chosenIssueType_@issueType.IssueTypeID">
				@issueType.IssueTypeID
			</label>
		</div>
	}

	<button class="btn btn-primary" type="submit"></button>

</form>